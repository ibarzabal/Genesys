<root>
	<!-- Extra CT templates for Genesys -->
	<template name="label_ct_init_skill">
		<label_ct>
			<anchored height="20">
				<bottom offset="-22" />
				<right parent="contentanchor" offset="-180" />
			</anchored>
			<static textres="ct_label_init_skill" />
		</label_ct>
	</template>

	<!-- Genesys specific -->
	<template name="button_ctentry_choose_next_base">
		<buttonfield>
			<anchored width="33" height="40">
				<top parent="active_spacer_top" anchor="bottom" />
				<left />
			</anchored>
			<state icon="" />
			<state icon="ct_choose_next" />
		</buttonfield>
	</template>
	<template name="button_ctentry_choose_next">
		<button_ctentry_choose_next_base>
			<script file="ct/scripts/ctentry_choose_next.lua" />
		</button_ctentry_choose_next_base>
	</template>

	<template name="ct_init_skill">
				<!--Initiative skill selector (used for auto init rolls)-->
				<initskillcontrol name="init_skill_value">
					<sourcename>initskill</sourcename>
					<anchored height="20">
						<bottom offset="-25" />
						<right parent="contentanchor" offset="-140" />
					</anchored>
				</initskillcontrol>
	</template>

	<template name="button_ct_menu">
		<buttoncontrol>
			<bounds>26,11,40,20</bounds>
			<icon normal="button_menu" pressed="button_menu_down" />
			<tooltip textres="ct_tooltip_menu" />
			<script file="ct/scripts/ct_menu_genesys.lua" />
		</buttoncontrol>
	</template>







</root>
