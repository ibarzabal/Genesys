<root>
	<windowclass name="referenceskill">
		<frame>referencepage</frame>
		<placement>
			<size width="400" height="350" />
		</placement>
		<sizelimits>
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<nodelete />
		<playercontrol />
		<sharable />
		<script>
			function onLockChanged()
				if header.subwindow then
					header.subwindow.update();
				end
				if content.subwindow then
					content.subwindow.update();
				end
			end
		</script>
		<sheetdata>
			<sub_ref_header name="header">
				<class>ref_skill_header</class>
			</sub_ref_header>

			<frame_ref_content />
			<sub_ref_content name="content">
				<class>ref_skill_stats</class>
			</sub_ref_content>
			<scrollbar_ref_content />

			<resize_referencepage />
			<close_referencepage />
		</sheetdata>
	</windowclass>

	<windowclass name="ref_skill_header">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>referenceskill</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_skill" />
			</string_record_name>
		</sheetdata>
	</windowclass>

	<windowclass name="ref_skill_stats">
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				if bReadOnly then
					name_biglabel.setValue("[" .. name.getValue() .. "]");
					name_biglabel.setVisible(true);

					name.update(bReadOnly, true);
					namelabel.setVisible(false);
				else
					name_biglabel.setVisible(false);
					name.update(bReadOnly);
					namelabel.setVisible(false);
				end
				category.update(bReadOnly);
				characteristic.update(bReadOnly);
				description.update(bReadOnly);
				setting.update(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />

			<hs name="name" />

			<label_column name="name_biglabel">
				<anchored>
					<top relation="relative" offset="7" />
				</anchored>
				<font>reference-b-large</font>
			</label_column>

			<label_column name="namelabel">
				<static textres="skill_label_name" />
			</label_column>
			<string_columnh name="name" />

			<label_column name="category_label">
				<static textres="category_label" />
			</label_column>
			<string_columnh name="category" />

			<label_column name="characteristic_label">
				<static textres="characteristic_label" />
			</label_column>
<!--			<string_columnh name="characteristic" /> -->

			<characteristiccontrolh name="characteristic">
				<sourcename>characteristic</sourcename>
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
					<left offset="95" />
			<!-- 					<right offset="-5" /> -->
				</anchored>
			</characteristiccontrolh>






			<ft_columnh name="description" />

			<label_column name="setting_label">
				<static textres="talent_label_setting" />
			</label_column>
			<string_columnh name="setting" />
		</sheetdata>
	</windowclass>
</root>
