<root>
	<windowclass name="referencespecies_archetype">
		<frame>recordsheet</frame>
		<placement>
			<size width="450" height="400" />
		</placement>
		<sharable />
		<sizelimits>
			<minimum width="350" height="350" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<nodelete />
		<playercontrol />
		<sharable />
		<script file="campaign/scripts/species_archetype.lua" />
		<sheetdata>
			<sub_record_header name="header">
				<class>ref_species_archetype_header</class>
			</sub_record_header>

			<frame_record_content name="contentframe" />

			<subwindow_record name="main">
				<class>species_main</class>
				<activate />
			</subwindow_record>
			<scrollbar_record>
				<target>main</target>
			</scrollbar_record>

			<resize_recordsheet />
			<close_recordsheet />
		</sheetdata>
	</windowclass>

	<windowclass name="ref_species_archetype_header">
		<margins control="0,0,0,2" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>referencespecies_archetype</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_species_archetype" />
			</string_record_name>
			<label_recordtype name="recordtype">
				<static textres="record_label_species_archetype" />
			</label_recordtype>
		</sheetdata>
	</windowclass>

