					function onValueChanged()
						local bEdit = (getValue() == 1);

						window.skills_iadd.setVisible(bEdit);
						window.skills_iadd_craft.setVisible(bEdit);
						window.skills_iadd_knowledge.setVisible(bEdit);
						window.skills_iadd_perform.setVisible(bEdit);
