	<root>
		<windowclass name="charsheet_main">
			<script file="campaign/scripts/char_main.lua" />
			<sheetdata>
				<button_iedit name="actions_iedit">
					<anchored position="insidebottomright" offset="10,10" />
					<tooltip textres="char_abilities_tooltip_edit" />
					<script>
						function onValueChanged()
							local bEditMode = (getValue() == 1);
							Debug.chat(bEditMode);
							window.contents.subwindow.talents_iadd.setVisible(bEditMode);
							window.contents.subwindow.talents.update();
							window.contents.subwindow.languages_iadd.setVisible(bEditMode);
							window.contents.subwindow.languages.update();
						end
					</script>
				</button_iedit>

				<!-- Characteristics -->
				<frame_char name="characteristicsframe">
					<bounds>15,35,363,87</bounds>
				</frame_char>

				<string_labeled name="characteristics_label">
					<anchored to="characteristicsframe" position="insidetopleft" offset="140,-2">
						<right parent="characteristicsframe" anchor="left" offset="-5" />
					</anchored>
					<labelres>characteristics</labelres>
				</string_labeled>

				<number_charabilityscore name="brawn" source="characteristics.brawn.score">
					<anchored to="characteristicsframe" position="insidetopleft" offset="17,24" />
					<description textres="char_tooltip_str" />
				</number_charabilityscore>
				<string_labeled name="brawn_label">
					<anchored to="brawn" position="insidetopleft" offset="-1,24">
						<right parent="brawn" anchor="left" offset="-5" />
					</anchored>
					<labelres>brawn</labelres>
				</string_labeled>

				<number_charabilityscore name="agility" source="characteristics.agility.score">
					<anchored to="characteristicsframe" position="insidetopleft" offset="76,24" />
					<description textres="char_tooltip_dex" />
				</number_charabilityscore>
				<string_labeled name="agility_label">
					<anchored to="agility" position="insidetopleft" offset="-4,25">
						<right parent="agility" anchor="left" offset="-5"/>
					</anchored>
					<labelres>agility</labelres>
				</string_labeled>

				<number_charabilityscore name="intellect" source="characteristics.intellect.score">
					<anchored to="characteristicsframe" position="insidetopleft" offset="135,24" />
					<description textres="char_tooltip_con" />
				</number_charabilityscore>
				<string_labeled name="intellect_label">
					<anchored to="intellect" position="insidetopleft" offset="-8,25">
						<right parent="intellect" anchor="left" offset="-5" />
					</anchored>
					<labelres>intellect</labelres>
				</string_labeled>

				<number_charabilityscore name="cunning" source="characteristics.cunning.score">
					<anchored to="characteristicsframe" position="insidetopleft" offset="194,24" />
					<description textres="char_tooltip_int" />
				</number_charabilityscore>
				<string_labeled name="cunning_label">
					<anchored to="cunning" position="insidetopleft" offset="-6,25">
						<right parent="cunning" anchor="left" offset="-5" />
					</anchored>
					<labelres>cunning</labelres>
				</string_labeled>

				<number_charabilityscore name="willpower" source="characteristics.willpower.score">
					<anchored to="characteristicsframe" position="insidetopleft" offset="253,24" />
					<description textres="char_tooltip_wis" />
				</number_charabilityscore>
				<string_labeled name="willpower_label">
					<anchored to="willpower" position="insidetopleft" offset="-14,25">
						<right parent="willpower" anchor="left" offset="-5" />
					</anchored>
					<labelres>willpower</labelres>
				</string_labeled>

				<number_charabilityscore name="presence" source="characteristics.presence.score">
					<anchored to="characteristicsframe" position="insidetopleft" offset="312,24" />
					<description textres="char_tooltip_cha" />
				</number_charabilityscore>
				<string_labeled name="presence_label">
					<anchored to="presence" position="insidetopleft" offset="-9,25">
						<right parent="presence" anchor="left" offset="-5" />
					</anchored>
					<labelres>presence</labelres>
				</string_labeled>


				<!-- EXPERIENCE -->
				<frame_char name="experience">
					<bounds>375,35,120,87</bounds>
				</frame_char>
				<string_labeled name="experience_label">
					<anchored to="experience" position="insidetopleft" offset="35,-3">
						<right parent="experience" anchor="left" offset="-5" />
					</anchored>
					<labelres>experience</labelres>
				</string_labeled>


				<!-- EXPERIENCE TOTAL -->
				<derived_attribute name="experience_total" source="experience.total">
					<anchored to="experience" position="insidetopright" offset="14,21" width="20" height="15" />
					<description textres="experience_total" />
				</derived_attribute>
				<label name="experience_total_label">
					<anchored to="experience" position="insidetopright" offset="43,21" width="30" height="15" />
					<center />
					<static>Total</static>
				</label>

				<!-- EXPERIENCE SPENT -->
				<derived_attribute name="experience_spent" source="experience.spent">
					<anchored to="experience" position="insidetopright" offset="14,41" width="20" height="15" />
					<description textres="experience_spent" />
				</derived_attribute>
				<label name="experience_spent_label">
					<anchored to="experience" position="insidetopright" offset="43,41" width="35" height="15" />
					<center />
					<static>Spent</static>
				</label>

				<!-- EXPERIENCE REMAINING -->
				<derived_attribute name="experience_remaining" source="experience.remaining">
					<anchored to="experience" position="insidetopright" offset="14,61" width="20" height="15" />
					<description textres="experience_remaining" />
				</derived_attribute>
				<label name="experience_remaining_label">
					<anchored to="experience" position="insidetopright" offset="41,61" width="65" height="15" />
					<center />
					<static>Remaining</static>
				</label>


				<!-- NEW -->

				<subwindow name="contents">
					<bounds>25,122,-45,-40</bounds>
					<class>charsheet_abilities_contents</class>
					<activate />
					<fastinit />
				</subwindow>
				<scrollbar_charcontents />
			</sheetdata>
		</windowclass>


			<windowclass name="charsheet_abilities_contents">
				<margins control="0,0,0,2" />
				<script file="campaign/scripts/char_abilities.lua" />
				<sheetdata>

					<label_charframetop name="talentstitle">
						<bounds>15,10,-10,20</bounds>
						<static textres="char_abilities_label_talents" />
	<!--					<icons>char_abilities_green</icons> -->
						<target>talents</target>
					</label_charframetop>
					<list_abilities name="talents">
						<anchored to="talentstitle">
							<top anchor="bottom" relation="relative" offset="5" />
							<left />
							<right />
						</anchored>
						<datasource>.talentlist</datasource>
						<class>ability_item</class>
						<listheader>talentstitle</listheader>
					</list_abilities>
					<button_iadd name="talents_iadd">
						<anchored to="talentstitle" position="insidetopright" offset="5,0" />
						<target>talents</target>
					</button_iadd>

					<label_charframetop name="featurestitle">
						<anchored to="talentstitle" height="20">
							<top anchor="bottom" relation="relative" offset="7" />
							<left />
							<right />
						</anchored>
						<static textres="char_abilities_label_features" />
	<!--					<icons>char_abilities_red</icons>  -->
						<target>features</target>
					</label_charframetop>
					<list_abilities name="features">
						<anchored to="featurestitle">
							<top anchor="bottom" relation="relative" offset="5" />
							<left />
							<right />
						</anchored>
						<datasource>.featurelist</datasource>
						<class>ability_item</class>
						<listheader>featurestitle</listheader>
					</list_abilities>
					<button_iadd name="features_iadd">
						<anchored to="featurestitle" position="insidetopright" offset="5,0" />
						<target>features</target>
					</button_iadd>

					<label_charframetop name="traitstitle">
						<anchored to="featurestitle" height="20">
							<top anchor="bottom" relation="relative" offset="7" />
							<left />
							<right />
						</anchored>
						<static textres="char_abilities_label_traits" />
	<!--					<icons>char_abilities</icons> -->
						<target>traits</target>
					</label_charframetop>
					<list_abilities name="traits">
						<anchored to="traitstitle">
							<top anchor="bottom" relation="relative" offset="5" />
							<left />
							<right />
						</anchored>
						<datasource>.traitlist</datasource>
						<class>ability_item</class>
						<listheader>traitstitle</listheader>
					</list_abilities>
					<button_iadd name="traits_iadd">
						<anchored to="traitstitle" position="insidetopright" offset="5,0" />
						<target>traits</target>
					</button_iadd>

					<label_charframetop name="proficienciestitle">
						<anchored to="traitstitle" height="20">
							<top anchor="bottom" relation="relative" offset="7" />
							<left />
							<right />
						</anchored>
						<static textres="char_abilities_label_proficiencies" />
	<!-- 					<icons>char_abilities_purple</icons> -->
						<target>proficiencies</target>
					</label_charframetop>
					<button_iadd name="proficiencies_iadd">
						<anchored to="proficienciestitle" position="insidetopright" offset="5,0" />
						<target>proficiencies</target>
					</button_iadd>
					<list_abilities name="proficiencies">
						<anchored to="proficienciestitle">
							<top anchor="bottom" relation="relative" offset="5" />
							<left />
							<right />
						</anchored>
						<datasource>.proficiencylist</datasource>
						<class>proficiency_item</class>
						<listheader>proficienciestitle</listheader>
					</list_abilities>

					<label_charframetop name="languagestitle">
						<anchored to="proficienciestitle" height="20">
							<top anchor="bottom" relation="relative" offset="7" />
							<left />
							<right />
						</anchored>
						<static textres="char_abilities_label_languages" />
	<!--					<icons>char_abilities_blue</icons> -->
						<target>languages</target>
					</label_charframetop>
					<list_abilities name="languages">
						<anchored to="languagestitle">
							<top anchor="bottom" relation="relative" offset="5" />
							<left />
							<right />
						</anchored>
						<datasource>.languagelist</datasource>
						<class>char_language</class>
						<listheader>languagestitle</listheader>
					</list_abilities>
					<button_iadd name="languages_iadd">
						<anchored to="languagestitle" position="insidetopright" offset="5,0" />
						<target>languages</target>
					</button_iadd>
				</sheetdata>
			</windowclass>

			<windowclass name="proficiency_item">
				<margins control="0,0,0,2" />
				<sheetdata>
					<genericcontrol name="rightanchor">
						<anchored position="insidetopright" height="0" width="0" />
					</genericcontrol>
					<button_idelete name="idelete">
						<anchored to="rightanchor">
							<top />
							<right anchor="left" relation="relative" offset="-5" />
						</anchored>
					</button_idelete>
					<string_textlistitem name="name">
						<anchored position="insidetopleft">
							<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
						</anchored>
						<multilinespacing>20</multilinespacing>
					</string_textlistitem>
				</sheetdata>
			</windowclass>

			<windowclass name="ability_item">
				<margins control="0,0,0,2" />
				<sheetdata>
					<genericcontrol name="rightanchor">
						<anchored position="insidetopright" offset="0,2" height="0" width="0" />
					</genericcontrol>
					<linkcontrol name="shortcut">
						<anchored to="rightanchor" width="20" height="20">
							<top />
							<right anchor="left" relation="relative" offset="-5" />
						</anchored>
						<class>ref_ability</class>
						<readonly />
					</linkcontrol>
					<button_idelete name="idelete">
						<anchored to="rightanchor">
							<top />
							<right anchor="left" offset="-5" />
						</anchored>
					</button_idelete>

					<string_textlistitem name="name">
						<anchored to="rightanchor">
							<top />
							<left parent="" offset="5" />
							<right anchor="left" relation="relative" offset="-10" />
						</anchored>
						<multilinespacing>20</multilinespacing>
					</string_textlistitem>
				</sheetdata>
			</windowclass>



	</root>
