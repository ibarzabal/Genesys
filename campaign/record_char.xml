<root>
	<windowclass name="charsheet">
		<frame>charsheet</frame>
		<placement>
			<size width="525" height="568" />
		</placement>
		<sizelimits>
            <minimum width="525" height="568" />
						<maximum width="525" />
			<dynamic />
        </sizelimits>
		<softclose />
		<nodelete />
		<playercontrol />
		<tooltip field="name" />
		<script file="campaign/scripts/char.lua" />
		<sheetdata>
			<button_charactivate name="speak">
				<bounds>-41,30,23,22</bounds>
			</button_charactivate>

			<token_char name="token">
				<bounds>-86,23,40,40</bounds>
			</token_char>

			<genericcontrol>
				<bounds>-137,21,45,45</bounds>
				<icon>charlist_base</icon>
				<disabled />
			</genericcontrol>
			<portrait_charlocal name="localportrait">
				<bounds>-137,21,45,45</bounds>
				<invisible />
			</portrait_charlocal>
			<portrait_char name="portrait">
				<bounds>-137,21,45,45</bounds>
			</portrait_char>

			<!-- name -->
			<frame_char name="main_character">
				<bounds>15,15,363,87</bounds>
			</frame_char>

			<string_labeled name="name">
				<anchored to="main_character" position="insidetopleft" offset="17,14" width="200" height="20" />
				<labelres>char_label_name</labelres>
			</string_labeled>

			<!-- species_archetype -->
			<string_labeled name="species_archetype">
				<anchored to="main_character" position="insidetopleft" offset="235,14" width="100" height="20"/>
				<labelres>char_label_species_archetype</labelres>
			</string_labeled>
						<linkfield name="species_archetypelink">
							<anchored to="species_archetype" position="right" offset="0" width="20" />
							<description field="species_archetype" />
							<closetoggle />
							<invisible />
							<script>
								function onInit()
									onValueChanged();
								end
								function onValueChanged()
									if isEmpty() then
										setVisible(false);
									else
										setVisible(true);
									end
								end
							</script>
						</linkfield>

			<!-- Career -->
			<string_labeled name="career">
				<anchored to="main_character" position="insidetopleft" offset="17,45" width="200"  height="20"/>
				<labelres>char_label_career</labelres>
			</string_labeled>

			<linkfield name="careerlink">
				<anchored to="career" position="right" offset="0" width="20" />
				<description field="career" />
				<closetoggle />
				<invisible />
				<script>
					function onInit()
						onValueChanged();
					end
					function onValueChanged()
						if isEmpty() then
							setVisible(false);
						else
							setVisible(true);
						end
					end
				</script>
			</linkfield>





<!--			<subwindow name="main">
				<bounds>0,65,-1,-20</bounds>
				<class>charsheet_main</class>
			</subwindow>
JOHN: Removing main for the time being... i want to improve it later
-->
			<subwindow name="skills">
				<bounds>0,65,-1,-20</bounds>
				<class>charsheet_skilllist</class>
			</subwindow>
			<subwindow name="abilities">
				<bounds>0,65,-1,-20</bounds>
				<class>charsheet_talents</class>
			</subwindow>
			<subwindow name="combat">
				<bounds>0,65,-1,-20</bounds>
				<class>charsheet_combat</class>
			</subwindow>
			<subwindow name="inventory">
				<bounds>0,65,-1,-20</bounds>
				<class>charsheet_inventory</class>
			</subwindow>
			<subwindow name="notes">
				<bounds>0,65,-1,-20</bounds>
				<class>charsheet_notes</class>
			</subwindow>

			<tabs_charsheet name="tabs">
<!--				<tab>
					<icon>tab_main</icon>
					<subwindow>main</subwindow>
				</tab>
-->				
				<tab>
					<icon>tab_skills</icon>
					<subwindow>skills</subwindow>
				</tab>
				<tab>
					<icon>tab_abilities</icon>
					<subwindow>abilities</subwindow>
				</tab>
				<tab>
					<icon>tab_combat</icon>
					<subwindow>combat</subwindow>
				</tab>
				<tab>
					<icon>tab_inventory</icon>
					<subwindow>inventory</subwindow>
				</tab>
				<tab>
					<icon>tab_notes</icon>
					<subwindow>notes</subwindow>
				</tab>
				<activate>1</activate>
			</tabs_charsheet>

<!--			<button_charmini>
				<bounds>10,-25,40,15</bounds>
			</button_charmini>
-->
			<resize_charsheet />
			<close_charsheet />
		</sheetdata>
	</windowclass>

	<windowclass name="charsheetmini">
		<frame>charsheet</frame>
		<placement>
			<size width="450" height="425" />
		</placement>
		<sizelimits>
			<minimum width="450" height="425" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_npc</minimize>
		<tooltip field="name" />
		<softclose />
		<nodelete />
		<playercontrol />
		<minisheet />
		<script file="campaign/scripts/char.lua" />
		<sheetdata>
			<frame_char name="overviewframe">
				<bounds>10,20,-50,40</bounds>
			</frame_char>
			<stringu name="name">
				<anchored to="overviewframe" position="insidetopleft" offset="15,10" width="120" height="20" />
				<static />
			</stringu>
			<stringu name="race">
				<anchored to="overviewframe" position="insidetopleft" offset="145,10" width="70" height="20" />
				<static />
			</stringu>
			<string_charclasslevelsummary name="class_overview">
				<anchored to="overviewframe" position="insidetopleft" offset="225,10" height="20">
					<right offset="-15" />
				</anchored>
			</string_charclasslevelsummary>
			<button_charactivate>
				<bounds>-50,30,23,22</bounds>
			</button_charactivate>

			<subwindow name="actions">
				<bounds>10,70,-37,-30</bounds>
				<frame name="groupbox" offset="0,10,10,10" />
				<class>charsheetmini_actions</class>
			</subwindow>
			<scrollbar>
				<anchored to="actions" position="right" offset="-15,-10" />
				<target>actions</target>
			</scrollbar>

			<subwindow name="main">
				<bounds>10,50,-22,-10</bounds>
				<class>charsheetmini_main</class>
			</subwindow>
			<subwindow name="abilities">
				<bounds>0,65,-1,-20</bounds>
				<class>charsheet_abilities</class>
			</subwindow>

			<subwindow name="abilities">
				<bounds>10,50,-22,-10</bounds>
				<class>charsheetmini_abilities</class>
			</subwindow>
			<subwindow name="inventory">
				<bounds>10,50,-22,-10</bounds>
				<class>charsheetmini_inventory</class>
			</subwindow>

			<tabs_charsheet name="tabs">
				<tab>
					<icon>tab_main</icon>
					<subwindow>main</subwindow>
				</tab>
				<tab>
					<icon>tab_abilities</icon>
					<subwindow>abilities</subwindow>
				</tab>
				<tab>
					<icon>tab_inventory</icon>
					<subwindow>inventory</subwindow>
				</tab>
				<tab>
					<icon>tab_actions</icon>
					<subwindow>actions</subwindow>
				</tab>
				<activate>1</activate>
			</tabs_charsheet>

			<button_charfull>
				<bounds>10,-25,40,15</bounds>
			</button_charfull>

			<resize_charsheet />
			<close_charsheet />
		</sheetdata>
	</windowclass>
</root>
