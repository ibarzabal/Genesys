<root>
	<windowclass name="referencetalent">
		<frame>referencepage</frame>
		<placement>
			<size width="400" height="350" />
		</placement>
		<sizelimits>
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
		<tooltip field="name" />
		<nodelete />
		<playercontrol />
		<sharable />
		<script>
			function onLockChanged()
				if header.subwindow then
					header.subwindow.update();
				end
				if content.subwindow then
					content.subwindow.update();
				end
			end
		</script>


		<sheetdata>
			<sub_ref_header name="header">
				<class>ref_talent_header</class>
			</sub_ref_header>

			<frame_ref_content />
			<sub_ref_content name="content">
				<class>ref_talent_stats</class>
			</sub_ref_content>
			<scrollbar_ref_content />

			<resize_referencepage />
			<close_referencepage />
		</sheetdata>
	</windowclass>

	<windowclass name="ref_talent_header">
		<margins control="0,0,0,7" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>referencetalent</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_talent" />
			</string_record_name>
		</sheetdata>
	</windowclass>

	<windowclass name="ref_talent_stats">
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				if bReadOnly then
					name_biglabel.setValue("[" .. name.getValue() .. "]");
					name_biglabel.setVisible(true);

					name.update(bReadOnly, true);
					namelabel.setVisible(false);
				else
					name_biglabel.setVisible(false);
					name.update(bReadOnly);
					namelabel.setVisible(false);
				end
				tier.update(bReadOnly);
				summary.update(bReadOnly);
				description.update(bReadOnly);
				ranked.update(bReadOnly);
				activation.update(bReadOnly);
				setting.update(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />

			<hs name="name" />

			<label_column name="name_biglabel">
				<anchored>
					<top relation="relative" offset="7" />
				</anchored>
				<font>reference-b-large</font>
			</label_column>

			<label_column name="namelabel">
				<static textres="talent_label_name" />
			</label_column>
			<string_columnh name="name" />

			<label_column name="tier_label">
				<static textres="talent_label_tier" />
			</label_column>
			<string_columnh name="tier" />


			<label_column name="activation_label">
				<static textres="talent_label_activation" />
			</label_column>
			<string_columnh name="activation" />

			<label_column name="ranked_label">
				<static textres="talent_label_ranked" />
			</label_column>
			<string_columnh  name="ranked" />

			<ft_columnh name="description" />


			<label_column name="summary_label">
				<static textres="talent_label_summary" />
			</label_column>
			<string_columnh name="summary" />

			<label_column name="setting_label">
				<static textres="talent_label_setting" />
			</label_column>
			<string_columnh name="setting" />

		</sheetdata>
	</windowclass>


	<windowclass name="talentsmall">
		<sizelimits>
			<maximum>
				<height>20</height>
			</maximum>
		</sizelimits>
		<sheetdata>
			<windowbutton name="open">
				<bounds>0,1,20,20</bounds>
				<class>referencetalent</class>
			</windowbutton>
			<basestringfield name="name">
				<bounds>21,4,-1,17</bounds>
				<empty>&#171; New Talent &#187;</empty>
				<disabled />
			</basestringfield>
			<basestringfield name="ranked">
				<bounds>21,4,-1,17</bounds>
				<disabled />
				<invisible />
					<script>
					function onInit()
						if super.onInit then super.onInit() end

						onValueChanged();
					end

					function onValueChanged()
						if getValue() == "ranked" or getValue() == "Yes" then
							window.ranks.setVisible(true);
						else
							window.ranks.setVisible(false);
						end
					end
				</script>
			</basestringfield>
			<basenumberfield name="ranks">
				<bounds>-20,4,-1,17</bounds>
				<disabled />
			</basenumberfield>
		</sheetdata>
	</windowclass>



</root>
