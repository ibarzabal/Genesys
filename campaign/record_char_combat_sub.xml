					<!-- WEAPON -->
						<windowclass name="charsheet_combat_weapon">
							<sizelimits>
								<dynamic />
								<!--<maximum>
									<height>40</height>
								</maximum>-->
							</sizelimits>
							<sheetdata>
								<genericcontrol name="rightanchor">
									<anchored width="0" height="0">
										<top />
										<right />
									</anchored>
									<invisible />
								</genericcontrol>

								<weapondicepool>
									<anchored width="20" height="20">
										<top offset="2" />
										<right parent="rightanchor" anchor="left" relation="relative" offset="-1" />
									</anchored>
								</weapondicepool>

								<stringfield name="range">
									<sourcename>range</sourcename>
									<anchored width="20" height="20">
										<top offset="2" />
										<right parent="rightanchor" anchor="left" relation="relative" offset="-2" />
									</anchored>
									<disabled />
								</stringfield>

								<number name="critical" source="critical">
									<anchored width="20" height="20">
										<top offset="2" />
										<right parent="rightanchor" anchor="left" relation="relative" offset="-10" />
									</anchored>
									<disabled />
								</number>

								<stringfield name="damage">
									<anchored width="20" height="20">
										<top offset="2" />
										<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
									</anchored>
									<disabled />
								</stringfield>

								<stringfield name="skill">
									<anchored width="20" height="20">
										<top offset="2" />
										<right parent="rightanchor" anchor="left" relation="relative" offset="-5" />
									</anchored>
									<disabled />
									<invisible />
								</stringfield>


								<windowbutton name="open">
									<bounds>0,0,20,20</bounds>
									<class>item</class>
								</windowbutton>

								<basestringfield name="name">
									<!--<bounds>21,3,96,17</bounds>--> <!--width was 96-->
									<anchored>
										<left>
											<anchor>left</anchor>
											<offset>21</offset>
										</left>
										<top>
											<anchor>top</anchor>
											<offset>3</offset>
										</top>
										<size>
											<width>100</width>
										</size>
									</anchored>
									<empty>&#171; New Item &#187;</empty>
									<disabled />
								</basestringfield>

								<baseformattedtextfield name="description">
									<anchored>
										<left>
											<anchor>left</anchor>
											<offset>25</offset>
										</left>
										<top>
											<anchor>top</anchor>
											<offset>21</offset>
										</top>
										<size>
											<width>200</width>
										</size>
									</anchored>
								</baseformattedtextfield>
							</sheetdata>
						</windowclass>
</root>
