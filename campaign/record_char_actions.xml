<root>

	<windowclass name="charsheet_actions">
		<script>
			function onDrop(x, y, draginfo)
				if contents.subwindow.actions.subwindow.onDrop(x, y, draginfo) then
					return true;
				end
				return false;
			end
		</script>
		<sheetdata>

<!--
